					</item>
				</userParameters>		
				<method>2</method> <!-- BorhanHttpNotificationMethod::POST -->
			</template>
		</request>
		<request service="eventNotificationTemplate" action="updateStatus" plugin="eventNotification" partnerId="0">
			<id>{1:result:id}</id>
